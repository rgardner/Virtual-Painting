<UserControl x:Class="KinectDrawing.PhotoBooth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectDrawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Viewbox>
            <Grid>
                <Image Name="camera" />
                <Canvas Name="canvas">
                    <local:DrawingBrush x:Name="brush" Width="300" Height="300" />
                    <Polyline Name="trail" Stroke="{Binding BrushStroke}" StrokeThickness="20">
                        <Polyline.Effect>
                            <BlurEffect Radius="2" />
                        </Polyline.Effect>
                    </Polyline>
                </Canvas>
                <Canvas Name="hitTestingCanvas">
                    <StackPanel Name="hitTestingFrame" />
                    <StackPanel Name="hitTestingBody" />
                </Canvas>
            </Grid>
        </Viewbox>
        <Image Name="overlay" Source="/Images/overlay_smile.png" />
    </Grid>
</UserControl>
