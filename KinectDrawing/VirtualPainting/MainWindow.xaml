<Window x:Class="VirtualPainting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualPainting"
        mc:Ignorable="d"
        Title="Virtual Painting" Height="350" Width="525"
        WindowStyle="None"
        WindowState="Maximized"
        Background="#2760A3">

    <!-- NOTE: Use WindowStyle="None" for full-screen. -->

    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Avenir LT Std 85 Heavy" />
        </Style>
    </Window.Resources>

    <Grid>
        <local:VirtualPaintingView />
    </Grid>
</Window>
